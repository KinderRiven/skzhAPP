<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinderriven.zoosystem.animal_status">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/animal_status"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="馆内状态"
            android:textSize="26dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_weight="1"
            android:text="温度"
            android:id="@+id/temper_text"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/hum_text"
            android:text="湿度"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/light_text"
            android:text="光照"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TableLayout
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_weight="1">
                <Button
                    android:layout_weight="1"
                    android:text="降温"
                    android:textSize="18dp"
                    android:id="@+id/motor_run"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight="1"
                    android:text="升温"
                    android:textSize="18dp"
                    android:id="@+id/motor_stop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:layout_weight="1"
                    android:text="开灯"
                    android:textSize="18dp"
                    android:id="@+id/light_run"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_weight="1"
                    android:text="关灯"
                    android:id="@+id/light_stop"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>
