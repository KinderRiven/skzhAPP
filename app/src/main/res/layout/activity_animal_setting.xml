<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinderriven.zoosystem.animal_setting">

    <ImageView
        android:src="@drawable/setting"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableLayout
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:layout_weight="1">
            <TextView
                android:text="温度上限:"
                android:textSize="26sp"
                />
            <EditText
                android:inputType="number"
                android:width="120dp"
                android:id="@+id/max_temper_text"
                android:textSize="26sp"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:text="温度下限:"
                android:textSize="26sp"
                />
            <EditText
                android:inputType="number"
                android:width="120dp"
                android:id="@+id/min_temper_text"
                android:textSize="26sp"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:text="亮度上限:"
                android:textSize="26sp"
                />
            <EditText
                android:inputType="number"
                android:textSize="26sp"
                android:id="@+id/max_light_text"
                android:width="120dp"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:text="亮度下限:"
                android:textSize="26sp"
                />
            <EditText
                android:inputType="number"
                android:id="@+id/min_light_text"
                android:width="120dp"
                android:textSize="26sp"
                />
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:layout_weight="1"
                android:id="@+id/animal_setting_change_button"
                android:text="修改"/>
            <Button android:layout_weight="1"
                android:text="重置"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:layout_weight="1"
                android:id="@+id/setting_smart_button"
                android:text="开启"/>
            <Button android:layout_weight="1"
                android:id="@+id/setting_un_smart_button"
                android:text="关闭"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
