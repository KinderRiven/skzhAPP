<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinderriven.zoosystem.app_setting">

    <TableRow
        android:layout_weight="1">
        <TextView
            android:text="终端设置"
            android:textStyle="italic"
            android:textSize="28sp"/>
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:textSize="24sp"
            android:text="终端序列号"/>
        <EditText
            android:id="@+id/app_id_text"
            android:textSize="24sp"
            android:width="450dp"/>
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:textSize="24sp"
            android:text="服务器地址"/>
        <EditText
            android:id="@+id/app_server_text"
            android:textSize="24sp"
            android:width="450dp"/>
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:textSize="24sp"
            android:text="发送频率(ms)"/>
        <EditText
            android:id="@+id/app_time_text"
            android:textSize="24sp"
            android:inputType="number"
            android:width="450dp"/>
    </TableRow>
    <LinearLayout
        android:layout_weight="1"
        >
        <Button
            android:text="修改"
            android:id="@+id/app_change_button"
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:text="重置"
            android:textSize="22sp"
            android:id="@+id/app_restart_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:text="开始发送"
            android:layout_weight="1"
            android:id="@+id/app_start_button"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:text="停止发送"
            android:id="@+id/app_stop_button"
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</TableLayout>
